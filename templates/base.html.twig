<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">
		<link rel="stylesheet" href="/style.css">

		</head>
		<body class="fond-bleu">
			{% if app.user %}
				<nav class="navbar navbar-expand-lg navbar-dark bg-primary ">
					<a class="navbar-brand" href="{{ path('rapport_index') }}">Logo</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse" id="navbarColor01">
						<ul class="navbar-nav mr-auto">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('rapport_index') }}">Consulter les rapports</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('rapport_new') }}">Cr√©er un rapport</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('profil') }}">Profil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
							</li>
							<li class="nav-item">
								{% if app.user.roles[0]== 'ROLE_ADMIN' %}
									<a class="nav-link" href="{{ path('security_registration') }}">Enregistrer un utilisateur</a>
								{% endif %}
							</li>
						</ul>
					</div>
				</nav>
			{% endif %}

			{% block body %}{% endblock %}
			{% block javascripts %}{% endblock %}
		</body>
	</html>
